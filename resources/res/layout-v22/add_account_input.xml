<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/textColor" android:layout_gravity="center_vertical" android:id="@+id/text1" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="?android:attr/listPreferredItemPaddingStart" android:paddingEnd="?android:attr/listPreferredItemPaddingEnd" android:layout_rowWeight="1"/>
        <com.google.android.material.button.MaterialButton android:layout_gravity="end|center_vertical" android:id="@+id/create_account" android:layout_width="wrap_content" android:text="@string/create_account" app:icon="@drawable/ic_baseline_add_24" style="@style/WhiteButton"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="60dp" android:layout_marginHorizontal="10dp">
        <EditText android:textColorHint="?attr/grayTextColor" android:id="@+id/login_username_input" android:nextFocusLeft="@+id/apply_btt" android:nextFocusRight="@+id/cancel_btt" android:nextFocusDown="@+id/login_email_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/example_username" android:inputType="text" android:requiresFadingEdge="vertical" android:autofillHints="username"/>
        <EditText android:textColorHint="?attr/grayTextColor" android:id="@+id/login_email_input" android:nextFocusLeft="@+id/apply_btt" android:nextFocusRight="@+id/cancel_btt" android:nextFocusUp="@+id/login_username_input" android:nextFocusDown="@+id/login_server_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/example_email" android:inputType="textEmailAddress" android:requiresFadingEdge="vertical" android:autofillHints="emailAddress"/>
        <EditText android:textColorHint="?attr/grayTextColor" android:id="@+id/login_server_input" android:nextFocusLeft="@+id/apply_btt" android:nextFocusRight="@+id/cancel_btt" android:nextFocusUp="@+id/login_email_input" android:nextFocusDown="@+id/login_password_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/example_ip" android:inputType="textUri" android:requiresFadingEdge="vertical"/>
        <EditText android:textColorHint="?attr/grayTextColor" android:id="@+id/login_password_input" android:nextFocusLeft="@+id/apply_btt" android:nextFocusRight="@+id/cancel_btt" android:nextFocusUp="@+id/login_server_input" android:nextFocusDown="@+id/apply_btt" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/example_password" android:inputType="textVisiblePassword" android:requiresFadingEdge="vertical" android:autofillHints="password"/>
    </LinearLayout>
    <LinearLayout android:gravity="end|bottom" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/apply_btt_holder" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="-60dp">
        <com.google.android.material.button.MaterialButton android:layout_gravity="end|center_vertical" android:id="@+id/apply_btt" android:layout_width="wrap_content" android:text="@string/login" style="@style/WhiteButton"/>
        <com.google.android.material.button.MaterialButton android:layout_gravity="end|center_vertical" android:id="@+id/cancel_btt" android:layout_width="wrap_content" android:text="@string/sort_cancel" style="@style/BlackButton"/>
    </LinearLayout>
</LinearLayout>
