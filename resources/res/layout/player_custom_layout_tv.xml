<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:screenOrientation="landscape" android:orientation="vertical" android:id="@+id/player_holder" android:tag="television" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/subtitle_holder" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/shadow_overlay" android:background="@drawable/player_gradient_tv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/player_video_holder" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/player_top_holder" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="end" android:id="@+id/player_video_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="80dp" android:layout_marginEnd="32dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="end" android:id="@+id/player_video_title_rez" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginStart="80dp" android:layout_marginEnd="32dp"/>
            <FrameLayout android:id="@+id/player_go_back_holder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_baseline_arrow_back_24" android:contentDescription="@string/go_back_img_des" app:tint="@android:color/white"/>
                <ImageView android:layout_gravity="center" android:id="@+id/player_go_back" android:background="@drawable/video_tap_button_always_white" android:focusable="true" android:clickable="true" android:layout_width="70dp" android:layout_height="70dp" android:contentDescription="@string/go_back_img_des"/>
            </FrameLayout>
        </FrameLayout>
        <ProgressBar android:layout_gravity="center" android:id="@+id/player_buffering" android:focusable="false" android:focusableInTouchMode="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:paddingTop="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0">
            <ImageButton android:id="@+id/exo_prev" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Previous"/>
            <ImageButton android:id="@+id/exo_repeat_toggle" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton"/>
            <ImageButton android:id="@+id/exo_next" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Next"/>
            <ImageButton android:id="@+id/exo_vr" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.VR"/>
            <ImageButton android:id="@+id/exo_play" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
            <ImageButton android:id="@+id/exo_pause" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/bottom_player_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_marginStart="64dp" android:layout_marginEnd="64dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0">
            <LinearLayout android:orientation="horizontal" android:id="@+id/player_video_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/player_pause_play" android:background="@drawable/video_tap_button" android:focusable="true" android:focusableInTouchMode="true" android:nextFocusUp="@+id/player_go_back" android:nextFocusDown="@+id/player_lock" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/netflix_pause" android:layout_marginStart="20dp" app:tint="@color/player_button_tv"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="end" android:layout_gravity="center" android:id="@+id/exo_position" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:includeFontPadding="false"/>
                <com.google.android.exoplayer2.p036ui.DefaultTimeBar android:layout_gravity="center" android:id="@+id/exo_progress" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" app:bar_height="2dp" app:played_color="?attr/colorPrimary" app:scrubber_color="?attr/colorPrimary" app:scrubber_dragged_size="26dp" app:scrubber_enabled_size="24dp" app:unplayed_color="@color/videoProgress"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/exo_duration" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginEnd="20dp"/>
            </LinearLayout>
            <HorizontalScrollView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:id="@+id/player_lock_holder" android:layout_width="wrap_content" android:layout_height="match_parent">
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_resize_btt" android:nextFocusLeft="@+id/player_lock" android:nextFocusRight="@+id/player_speed_btt" android:nextFocusUp="@+id/player_pause_play" android:text="@string/video_aspect_ratio_resize" app:icon="@drawable/ic_baseline_aspect_ratio_24" style="@style/VideoButtonTV"/>
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_speed_btt" android:nextFocusLeft="@+id/player_resize_btt" android:nextFocusRight="@+id/player_subtitle_offset_btt" android:nextFocusUp="@+id/player_pause_play" app:icon="@drawable/ic_baseline_speed_24" style="@style/VideoButtonTV"/>
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_subtitle_offset_btt" android:visibility="gone" android:nextFocusLeft="@+id/player_speed_btt" android:nextFocusRight="@+id/player_sources_btt" android:text="@string/subtitle_offset" app:icon="@drawable/ic_outline_subtitles_24" style="@style/VideoButtonTV"/>
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_sources_btt" android:nextFocusLeft="@+id/player_subtitle_offset_btt" android:nextFocusRight="@+id/player_skip_op" android:nextFocusUp="@+id/player_pause_play" android:text="@string/video_source" app:icon="@drawable/ic_baseline_playlist_play_24" style="@style/VideoButtonTV"/>
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_skip_op" android:nextFocusLeft="@+id/player_sources_btt" android:nextFocusRight="@+id/player_skip_episode" android:nextFocusUp="@+id/player_pause_play" android:text="@string/video_skip_op" app:icon="@drawable/ic_baseline_fast_forward_24" style="@style/VideoButtonTV"/>
                    <com.google.android.material.button.MaterialButton android:id="@+id/player_skip_episode" android:nextFocusLeft="@+id/player_skip_op" android:nextFocusRight="@+id/player_lock" android:nextFocusUp="@+id/player_pause_play" android:text="@string/next_episode" app:icon="@drawable/ic_baseline_skip_next_24" style="@style/VideoButtonTV"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
