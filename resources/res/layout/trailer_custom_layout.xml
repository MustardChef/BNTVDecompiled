<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:screenOrientation="landscape" android:orientation="vertical" android:id="@+id/player_holder" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/player_intro_play" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@drawable/player_gradient_tv" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@android:color/white" android:layout_gravity="start|bottom" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/trailer"/>
        <ImageView android:layout_gravity="center" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/play_button"/>
    </FrameLayout>
    <TextView android:textSize="30sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/player_time_text" android:layout_width="match_parent" android:layout_height="200dp" android:shadowColor="@android:color/black" android:shadowRadius="10"/>
    <FrameLayout android:id="@+id/subtitle_holder" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/shadow_overlay" android:background="@color/black_overlay" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/player_video_holder" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="center" android:id="@+id/player_buffering" android:focusable="false" android:focusableInTouchMode="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <FrameLayout android:id="@+id/player_pause_play_holder_holder" android:layout_width="100dp" android:layout_height="100dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <FrameLayout android:id="@+id/player_pause_play_holder" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="center" android:id="@+id/player_pause_play" android:background="@drawable/video_tap_button" android:nextFocusLeft="@+id/exo_rew" android:nextFocusRight="@+id/exo_ffwd" android:nextFocusUp="@+id/player_go_back" android:nextFocusDown="@+id/player_lock" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/netflix_pause" app:tint="@color/white"/>
            </FrameLayout>
        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/player_center_menu" android:layout_width="match_parent" android:layout_height="100dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <FrameLayout android:layout_gravity="start|center_vertical" android:id="@+id/player_rew_holder" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/player_ffwd_holder" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_percent="0.5">
                <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/exo_rew_text" android:layout_width="200dp" android:layout_height="40dp"/>
                <ImageButton android:layout_gravity="center" android:id="@+id/exo_rew" android:background="@drawable/video_tap_button_skip" android:padding="10dp" android:nextFocusLeft="@+id/exo_rew" android:nextFocusUp="@+id/player_go_back" android:nextFocusDown="@+id/player_lock" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/netflix_skip_forward" android:scaleType="fitCenter" android:scaleX="-1" android:tintMode="src_in" app:tint="@color/white"/>
            </FrameLayout>
            <FrameLayout android:layout_gravity="end|center_vertical" android:id="@+id/player_ffwd_holder" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/player_rew_holder" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_percent="0.5">
                <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/exo_ffwd_text" android:layout_width="200dp" android:layout_height="40dp"/>
                <ImageButton android:layout_gravity="center" android:id="@+id/exo_ffwd" android:background="@drawable/video_tap_button_skip" android:padding="10dp" android:nextFocusRight="@+id/exo_rew" android:nextFocusUp="@+id/player_go_back" android:nextFocusDown="@+id/player_lock" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/netflix_skip_forward" android:scaleType="fitCenter" android:tintMode="src_in" app:tint="@color/white"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:paddingTop="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0">
            <ImageButton android:id="@+id/exo_prev" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Previous"/>
            <ImageButton android:id="@+id/exo_repeat_toggle" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton"/>
            <ImageButton android:id="@+id/exo_next" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.Next"/>
            <ImageButton android:id="@+id/exo_vr" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark" style="@style/ExoMediaButton.VR"/>
            <ImageButton android:id="@+id/exo_play" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
            <ImageButton android:id="@+id/exo_pause" android:layout_width="0dp" android:layout_height="0dp" android:tintMode="src_in" app:tint="?attr/colorPrimaryDark"/>
        </LinearLayout>
        <ImageView android:id="@+id/player_open_source" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="20dp" android:src="@drawable/ic_baseline_public_24" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:tint="@color/white"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/bottom_player_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0">
            <LinearLayout android:orientation="horizontal" android:id="@+id/player_video_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:gravity="end" android:layout_gravity="center" android:id="@+id/exo_position" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginStart="20dp"/>
                <com.google.android.exoplayer2.p036ui.DefaultTimeBar android:id="@+id/exo_progress" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" app:bar_height="2dp" app:played_color="?attr/colorPrimary" app:scrubber_color="?attr/colorPrimary" app:scrubber_dragged_size="26dp" app:scrubber_enabled_size="24dp" app:unplayed_color="@color/videoProgress"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/exo_duration" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:includeFontPadding="false" android:layout_marginEnd="20dp"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/player_fullscreen" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/baseline_fullscreen_24" android:layout_marginEnd="20dp" app:tint="@color/white"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:gravity="start" android:layout_gravity="center_vertical" android:id="@+id/player_progressbar_left_holder" android:visibility="gone" android:layout_width="100dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/centerMenuView" app:layout_constraintTop_toTopOf="0">
            <ImageView android:id="@+id/player_progressbar_left_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="220dp" android:src="@drawable/ic_baseline_volume_up_24" android:layout_centerHorizontal="true" app:tint="@android:color/white"/>
            <ProgressBar android:layout_gravity="end|center_vertical" android:id="@+id/player_progressbar_left" android:layout_width="4dp" android:layout_height="150dp" android:max="100" android:progress="100" android:indeterminate="false" android:progressDrawable="@drawable/progress_drawable_vertical" android:layout_centerInParent="true" android:layout_marginStart="40dp" style="@android:style/Widget.Material.ProgressBar.Horizontal"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/player_progressbar_right_holder" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/centerMenuView" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <ImageView android:id="@+id/player_progressbar_right_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="220dp" android:src="@drawable/ic_baseline_brightness_7_24" android:layout_centerHorizontal="true" app:tint="@android:color/white"/>
            <ProgressBar android:layout_gravity="end|center_vertical" android:id="@+id/player_progressbar_right" android:layout_width="4dp" android:layout_height="150dp" android:max="100" android:progress="100" android:indeterminate="false" android:progressDrawable="@drawable/progress_drawable_vertical" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_marginEnd="40dp" style="@android:style/Widget.Material.ProgressBar.Horizontal"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
